<h1>Edit Badge</h1>
<%= form_for @badge do |f| %>
  <%= f.label :name %><br/>
  <%= f.text_field :name, class:'form-control' %><br/>
  <% if @badge.icon %>
      <%= image_tag @badge.icon.url %>
  <% end %>
  <%= f.file_field :icon %>
  <%= f.label :description %><br/>
  <%= f.text_area :description, class:'form-control' %><br/>
  <%= f.submit 'Submit', class:'btn btn-primary'%>
<% end %>
