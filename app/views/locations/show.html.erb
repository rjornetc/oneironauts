<% if policy(@location).edit? %>
    <%= link_to edit_user_location_path(user_id: @user.id, id: @location.id), class:'btn btn-warning', style:'float:right; margin-left:5px;' do %><i class="fa fa-pencil"></i> Edit<% end %>
<% end %>
<%if policy(@location).show? %>
    <% if @location.real %>
        <div class="btn btn-danger" style="float: right;">Real Character</div>
    <% end %>
    <h1><%= @location.name %></h1>
    <% if @location.icon.exists? %>
      <%= image_tag @location.icon.url %>
    <% end %>
    <%= f.label :attachment %><br />
    <%= f.file_field :icon %><br/>
    <h3>Description</h3>
    <p><%= @location.description %></p>
    <h2>Dreams where <%= @location.name %> appears</h2>
    <% @location.dreams.each do |dream| %>
        <%= link_to dream.title, user_dream_path(user_id:dream.user.id, id: dream.id) %>
        <hr />
    <% end %>
<% end %>
