<h1>Create a group</h1>
<%= form_for(@group) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
    
  <div class="actions">
    <%= f.submit "Create group" %>
  </div>
<% end %>
